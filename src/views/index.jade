doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport' content='width=device-width, user-scalable=no')

		link(href='dist/css/style.min.css' rel='stylesheet')
		link(href='dist/assets/favicon.ico' rel='shortcut icon')

		script(src='dist/js/jquery.min.js' type='text/javascript')

		title Peekaboo Daycare
	body(
		data-spy="scroll" 
		data-offset="0" 
		data-target="#theMenu")

		// side menu
		include _menu.jade

		// header/splash area
		include _header.jade

		// white section
		include _white.jade

		// services section
		include _services.jade
		
		// portfolio section
		include _testimonials.jade

		// white lower section
		include _white-lower.jade

		// about section
		include _about.jade

		// contact section
		include _contact.jade

		// credit
		include _credit.jade
		
	// accessory scripts

	script(src='dist/js/bootstrap.min.js' type='text/javascript')
	script(src='dist/js/classie.js' type='text/javascript')
	script(src='dist/js/smoothscroll.js' type='text/javascript')
	script(src='dist/js/main.js' type='text/javascript')
